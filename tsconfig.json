{
  "compilerOptions": {
    "target": "ES6", // Target ECMAScript 6 or later
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ], // Libraries for DOM and ESNext features
    "allowJs": true, // Allow JavaScript files
    "skipLibCheck": true, // Skip type checking of declaration files
    "strict": true, // Enable all strict type-checking options
    "strictNullChecks": true, // Enable strict null checks
    "strictFunctionTypes": true, // Enable strict function type checking
    "forceConsistentCasingInFileNames": true, // Enforce consistent casing in file names
    "noEmit": true, // Do not emit compiled files
    "esModuleInterop": true, // Enable compatibility with CommonJS modules
    "module": "ESNext", // Use ESNext module resolution
    "moduleResolution": "Node", // Use Node.js-style module resolution
    "resolveJsonModule": true, // Allow importing JSON files
    "isolatedModules": true, // Enforce module isolation (important for Next.js)
    "jsx": "preserve", // Preserve JSX for Next.js
    "incremental": true // Enable incremental builds
    ,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts", // Next.js type declarations
    "**/*.tsx", // Include TypeScript files
    "next-env.d.ts" // Include TSX files (React with TypeScript)
    ,
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules", // Exclude node_modules
    ".next", // Exclude Next.js build files
    "out" // Exclude Next.js output directory
  ]
}
